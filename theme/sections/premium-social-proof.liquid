<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section
  class="section section--{{ section.settings.section_width }} spacing-style premium-section"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <header class="section-resource-list__header">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
  </header>

  <div class="premium-social-proof">
    {% for block in section.blocks %}
      <article class="premium-card" {{ block.shopify_attributes }}>
        <div class="premium-social-proof__rating">★★★★★</div>
        <p>{{ block.settings.quote }}</p>
        <strong>{{ block.settings.name }}</strong>
        <span>{{ block.settings.location }}</span>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Premium social proof",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ils ont validé la performance"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Des retours terrain qui renforcent la confiance."
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page"
        },
        {
          "value": "full-width",
          "label": "Full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "Solide, technique, parfaitement conçu pour les sorties longues."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Julien M."
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Guide outdoor"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium social proof",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "Livraison rapide, produit fidèle à la promesse performance.",
            "name": "Camille R.",
            "location": "Trail & bivouac"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "Matériaux premium, finition impeccable, je recommande.",
            "name": "Alex P.",
            "location": "Expédition montagne"
          }
        }
      ]
    }
  ]
}
{% endschema %}
