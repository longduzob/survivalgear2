<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section
  class="section section--{{ section.settings.section_width }} spacing-style premium-section"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <header class="section-resource-list__header">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
  </header>

  <div class="premium-category-grid">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      <article class="premium-category-card" {{ block.shopify_attributes }}>
        <strong>{{ collection.title | default: block.settings.title }}</strong>
        <p>{{ block.settings.text }}</p>
        {% if collection != blank %}
          <a class="button button-secondary" href="{{ collection.url }}">Explorer</a>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Premium categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Catégories outdoor"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Sélection rapide par terrain et usage."
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page"
        },
        {
          "value": "full-width",
          "label": "Full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Fallback title",
          "default": "Aventure & trekking"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Sacs, équipements et accessoires pour le terrain."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium categories",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category",
          "settings": {
            "title": "Survie & bivouac",
            "text": "Kits essentiels pour l'autonomie totale."
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Performance tactique",
            "text": "Équipement robuste, modulable, prêt pour l'action."
          }
        }
      ]
    }
  ]
}
{% endschema %}
