<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section
  class="section section--{{ section.settings.section_width }} spacing-style premium-section"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="premium-trust-bar">
    {% for block in section.blocks %}
      <div class="premium-trust-bar__item" {{ block.shopify_attributes }}>
        <strong>{{ block.settings.title }}</strong>
        <span>{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Premium trust bar",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page"
        },
        {
          "value": "full-width",
          "label": "Full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Livraison 24-48h"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Expédition rapide depuis nos stocks."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium trust bar",
      "blocks": [
        {
          "type": "trust_item"
        },
        {
          "type": "trust_item",
          "settings": {
            "title": "Retours 30 jours",
            "text": "Essayez sans risque, retour simplifié."
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "title": "Garantie performance",
            "text": "Matériaux techniques, longue durée."
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "title": "Paiement sécurisé",
            "text": "Transactions chiffrées, anti-fraude."
          }
        }
      ]
    }
  ]
}
{% endschema %}
