<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section
  class="section section--{{ section.settings.section_width }} spacing-style premium-section premium-section--dark"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="premium-hero">
    <div class="premium-hero__copy">
      <p class="overline">{{ section.settings.eyebrow }}</p>
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <div class="premium-hero__actions">
        {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
          <a class="button" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        {% endif %}
        {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
          <a class="button button-secondary" href="{{ section.settings.secondary_link }}">
            {{ section.settings.secondary_label }}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="premium-hero__media" aria-hidden="true">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  </div>

  <div class="premium-hero__benefits">
    {% for block in section.blocks %}
      <div class="premium-card premium-card--dark" {{ block.shopify_attributes }}>
        <strong>{{ block.settings.title }}</strong>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Premium hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Outdoor Performance"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Équipement outdoor technique, prêt pour l'expédition."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Matériaux robustes, design sobre et performances éprouvées pour chaque mission en nature."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary CTA label",
      "default": "Explorer la collection"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary CTA link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary CTA label",
      "default": "Voir les best-sellers"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary CTA link"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page"
        },
        {
          "value": "full-width",
          "label": "Full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-6"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Testé sur le terrain"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Résistance validée par nos équipes en conditions extrêmes."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Premium hero",
      "blocks": [
        {
          "type": "benefit"
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Livraison 24-48h",
            "text": "Expédition rapide depuis nos stocks européens."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Garantie 2 ans",
            "text": "Qualité premium, assistance dédiée."
          }
        }
      ]
    }
  ]
}
{% endschema %}
